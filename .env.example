# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Telegram API credentials (получить на https://my.telegram.org/apps)
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# OpenRouter API Key (получить на https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model (можно изменить на любую модель из OpenRouter)
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Database path
DATABASE_PATH=bot_data.db

# Session name for Telegram client
SESSION_NAME=telegram_session
